<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >


    <fragment
        android:name="youtubedownloadhelper.list.YoutubeListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/playerconatainer">
    </fragment>
    <fragment
        android:name="youtubedownloadhelper.media.MediaPlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="130dip"
        android:id="@+id/playerconatainer"
        android:layout_alignParentBottom="true"
        >

    </fragment>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="#EE3B3B"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
